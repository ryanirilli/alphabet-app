    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch generate-assets",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node",
                "--compiler-options",
                "{\"module\":\"CommonJS\"}",
                "${workspaceFolder}/src/lib/generate-assets.ts"
            ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
